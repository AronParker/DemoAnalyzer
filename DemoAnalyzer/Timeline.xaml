<UserControl x:Class="DemoAnalyzer.Timeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoAnalyzer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="canvas" Background="DarkSlateGray">
        <Line Visibility="Hidden" x:Name="hover" StrokeThickness="2" Stroke="DarkRed"/>
        <Line Visibility="Hidden" x:Name="playback" StrokeThickness="2" Stroke="Green"/>
        <Rectangle Visibility="Hidden" x:Name="selection" Stroke="Orange" StrokeThickness="2" Fill="DarkOrange" Opacity=".5" Canvas.Left="100" Canvas.Top="100" Height="100" Width="100"/>
    </Canvas>
</UserControl>
